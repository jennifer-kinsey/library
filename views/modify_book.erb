<%= "<h2>#{@book.title}</h2>" %>
<%= "<h4>#{@book.author}</h4>" %>
<form class="form-group" action="/book" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Update Book Title:</label>
  <input class="form-control" type="text" name="title">
  <br>
  <label for="author">Update Author:</label>
  <input class="form-control" type="text" name="author">
  <br>
  <%= "<button type='submit' class='btn btn-primary' name='book_id' value='#{@book.id}'>Modify Book</button>
</form>" %>

<form class="form-group" action="/book" method="post">
  <input name="_method" type="hidden" value="delete">
  <%= "<button type='submit' name='book_id' value='#{@book.id}' class='btn btn-danger'>Delete</button> "%>
</form>
